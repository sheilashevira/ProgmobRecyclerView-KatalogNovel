<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewCoverNovel"
                android:layout_width="270dp"
                android:layout_height="300dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                app:srcCompat="@drawable/logos" />

            <TextView
                android:id="@+id/textViewJudulNovel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Judul Novel"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewKaryaNovel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengarang"
                android:textAlignment="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewGenreNovel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Genre"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewInfoNovel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel Informasi Novel "
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>